---
import { siteConfig } from "../config";
---

<section id="about" class="py-16 md:py-24 px-8 sm:px-12 md:px-16 lg:px-24 bg-slate-50">
  <div class="max-w-6xl mx-auto">
    <div class="grid grid-cols-1 lg:grid-cols-12 gap-8 lg:gap-16 items-start">
      <div class="lg:col-span-4 reveal">
        <h2 class="font-heading text-2xl sm:text-3xl md:text-4xl font-bold text-gray-900">
          About Me
        </h2>
        <div
          class="w-16 h-1 mt-3 rounded-full"
          style={`background-color: ${siteConfig.accentColor}`}
        ></div>
      </div>

      <div class="lg:col-span-8 space-y-8">
        <p class="reveal text-base sm:text-lg leading-relaxed text-gray-600">
          {siteConfig.aboutMe}
        </p>

        <div class="reveal pt-2">
          <div class="flex flex-wrap gap-2">
            {siteConfig.skills.map((skill: string) => (
              <span
                class="skill-badge px-3 py-1.5 rounded-full text-sm font-medium text-white"
                style={`background-color: ${siteConfig.accentColor}`}
              >
                {skill}
              </span>
            ))}
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
