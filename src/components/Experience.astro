---
import { siteConfig } from "../config";
const hasExperience = siteConfig.experience && siteConfig.experience.length > 0;
---

{hasExperience && (
  <section id="experience" class="py-16 md:py-24 px-8 sm:px-12 md:px-16 lg:px-24 bg-slate-50">
    <div class="max-w-6xl mx-auto">
      <div class="grid grid-cols-1 lg:grid-cols-12 gap-8 lg:gap-16 items-start">
        <div class="lg:col-span-4 reveal">
          <h2 class="font-heading text-2xl sm:text-3xl md:text-4xl font-bold text-gray-900">
            Experience
          </h2>
          <div
            class="w-16 h-1 mt-3 rounded-full"
            style={`background-color: ${siteConfig.accentColor}`}
          />
        </div>

        <div class="lg:col-span-8">
          <div class="relative pl-8">
            <div class="absolute left-0 top-0 w-0.5 h-full" style={`background-color: ${siteConfig.accentColor}25`}></div>

            {siteConfig.experience.map((exp: any, index: number) => (
              <div class="reveal relative mb-8 last:mb-0" style={`transition-delay: ${index * 0.1}s`}>
                <div
                  class="absolute -left-8 top-2 w-3.5 h-3.5 rounded-full border-2"
                  style={`border-color: ${siteConfig.accentColor}; background-color: ${siteConfig.accentColor}`}
                ></div>

                <div class="card-hover bg-white rounded-xl shadow-sm border border-gray-100 p-5 sm:p-6">
                  <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between mb-3">
                    <div>
                      <h3 class="text-lg font-bold text-gray-900">{exp.title}</h3>
                      <p class="text-base font-medium" style={`color: ${siteConfig.accentColor}`}>{exp.company}</p>
                    </div>
                    <span
                      class="text-xs font-medium mt-2 sm:mt-0 px-3 py-1 rounded-full"
                      style={`background-color: ${siteConfig.accentColor}10; color: ${siteConfig.accentColor}`}
                    >
                      {exp.dateRange}
                    </span>
                  </div>

                  <ul class="space-y-2 mt-3">
                    {exp.bullets.map((bullet: string) => (
                      <li class="flex items-start">
                        <span class="inline-block w-1.5 h-1.5 rounded-full mt-2 mr-3 flex-shrink-0" style={`background-color: ${siteConfig.accentColor}`}/>
                        <span class="text-sm text-gray-600">{bullet}</span>
                      </li>
                    ))}
                  </ul>
                </div>
              </div>
            ))}
          </div>
        </div>
      </div>
    </div>
  </section>
)}
