---
import { siteConfig } from "../config";
---

<div
  id="hero"
  class="relative isolate overflow-hidden bg-white py-24 md:min-h-screen flex items-center"
  style={`--accent-color: ${siteConfig.accentColor}`}
>
  <!-- Gradient overlay -->
  <div
    class="absolute inset-0 -z-10"
    style={`background: radial-gradient(ellipse 800px 1200px at 0% 0%, ${siteConfig.accentColor}20 0%, ${siteConfig.accentColor}10 30%, rgba(255, 255, 255, 0.5) 60%, white 100%)`}
  ></div>
  <svg
    aria-hidden="true"
    class="absolute inset-0 -z-10 size-full stroke-gray-200 [mask-image:radial-gradient(100%_100%_at_top_right,white,transparent)]"
  >
    <defs>
      <pattern id="grid-pattern" x="0" y="0" width="200" height="200" patternUnits="userSpaceOnUse">
        <path d="M.5 200V.5H200" fill="none"></path>
      </pattern>
    </defs>
    <rect fill="url(#grid-pattern)" width="100%" height="100%" opacity="0.15"></rect>
  </svg>

  <div class="h-full mx-auto px-8 sm:px-12 md:px-24 max-w-6xl w-full">
    <div class="flex flex-col md:flex-row items-center gap-10 md:gap-16">
      <!-- Photo -->
      <div class="hero-photo shrink-0">
        <div
          class="w-36 h-36 md:w-44 md:h-44 rounded-full overflow-hidden border-3"
          style={`border-color: ${siteConfig.accentColor}30`}
        >
          <img
            src={`${import.meta.env.BASE_URL}/profile.jpg`}
            alt={siteConfig.name}
            class="w-full h-full object-cover"
          />
        </div>
      </div>

      <!-- Content -->
      <div class="text-center md:text-left">
        <h1
          class="hero-name font-heading text-3xl sm:text-4xl md:text-5xl lg:text-6xl font-bold tracking-tight text-gray-900"
        >
          {siteConfig.name}
        </h1>

        <div class="hero-title mt-3 mb-2 mx-auto md:mx-0 h-0.5 w-16 rounded-full" style={`background-color: ${siteConfig.accentColor}`}></div>

        <p
          class="hero-title text-base sm:text-lg md:text-xl font-medium"
          style={`color: ${siteConfig.accentColor}`}
        >
          {siteConfig.title}
        </p>

        <p class="hero-title mt-3 text-sm text-gray-500">
          Diplomatic Academy of Vienna &middot; UNODC &middot; Cybercrime & International Law
        </p>

        <!-- Social Links -->
        <div class="hero-social mt-6 flex items-center justify-center md:justify-start gap-4">
          {siteConfig.social?.email && (
            <a
              href={`mailto:${siteConfig.social.email}`}
              class="inline-flex items-center gap-2 px-5 py-2.5 rounded-full text-sm font-semibold text-white transition-all duration-300 hover:scale-105"
              style={`background-color: ${siteConfig.accentColor}`}
            >
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
              </svg>
              Contact
            </a>
          )}
          {siteConfig.social?.linkedin && (
            <a
              href={siteConfig.social.linkedin}
              target="_blank"
              rel="noopener noreferrer"
              class="inline-flex items-center gap-2 px-5 py-2.5 rounded-full text-sm font-semibold border transition-all duration-300 hover:scale-105"
              style={`border-color: ${siteConfig.accentColor}; color: ${siteConfig.accentColor}`}
            >
              <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
                <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
              </svg>
              LinkedIn
            </a>
          )}
        </div>
      </div>
    </div>
  </div>
</div>
