---
import { siteConfig } from "../config";
const hasEducation = siteConfig.education && siteConfig.education.length > 0;
---

{hasEducation && (
  <section id="education" class="py-16 md:py-24 px-8 sm:px-12 md:px-16 lg:px-24">
    <div class="max-w-6xl mx-auto">
      <div class="grid grid-cols-1 lg:grid-cols-12 gap-8 lg:gap-16 items-start">
        <div class="lg:col-span-4 reveal">
          <h2 class="font-heading text-2xl sm:text-3xl md:text-4xl font-bold text-gray-900">
            Education
          </h2>
          <div
            class="w-16 h-1 mt-3 rounded-full"
            style={`background-color: ${siteConfig.accentColor}`}
          />
        </div>

        <div class="lg:col-span-8">
          <div class="space-y-5">
            {siteConfig.education.map((edu: any, index: number) => (
              <div
                class="reveal card-hover bg-white rounded-xl shadow-sm border border-gray-100 border-l-4 p-5 sm:p-6"
                style={`border-left-color: ${siteConfig.accentColor}; transition-delay: ${index * 0.1}s`}
              >
                <div class="flex flex-col sm:flex-row sm:items-start sm:justify-between mb-3">
                  <div>
                    <h3 class="text-lg font-bold text-gray-900">{edu.degree}</h3>
                    <p class="font-heading text-base italic" style={`color: ${siteConfig.accentColor}`}>
                      {edu.school}
                    </p>
                  </div>
                  <span class="text-xs font-medium mt-2 sm:mt-0 px-3 py-1 rounded-full" style={`background-color: ${siteConfig.accentColor}10; color: ${siteConfig.accentColor}`}>
                    {edu.dateRange}
                  </span>
                </div>

                <ul class="space-y-2 mt-3">
                  {edu.achievements.map((achievement: string) => (
                    <li class="flex items-start">
                      <span class="inline-block w-1.5 h-1.5 rounded-full mt-2 mr-3 flex-shrink-0" style={`background-color: ${siteConfig.accentColor}`}/>
                      <span class="text-sm text-gray-600">{achievement}</span>
                    </li>
                  ))}
                </ul>
              </div>
            ))}
          </div>
        </div>
      </div>
    </div>
  </section>
)}
